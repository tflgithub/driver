<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x280"
    android:layout_height="@dimen/x220"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/x10"
    android:id="@+id/ly_page"
    android:background="@drawable/shape_corners_solid_white_rect"
    android:orientation="vertical"
    android:padding="@dimen/x5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/x5">

        <TextView
            android:id="@+id/tv_name"
            style="@style/text_style_18sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:text="name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_route_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/x10"
                android:padding="@dimen/x5"
                android:src="@drawable/selector_item_route" />

            <ImageView
                android:id="@+id/img_phone_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x5"
                android:src="@drawable/phone_selector" />

            <ImageView
                android:id="@+id/img_msg_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:padding="@dimen/x5"
                android:src="@drawable/msg_selector" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:padding="@dimen/x5"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_retailer"
        style="@style/text_style_18sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x5" />

    <TextView
        android:id="@+id/tv_retailer_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:padding="@dimen/x5"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_return_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x5"
            android:text="dd"
            android:layout_alignParentLeft="true"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/tv_delivery_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x5"
            android:text="dd"
            android:layout_toRightOf="@+id/tv_return_mark"
            android:textColor="@color/deep_red" />

        <TextView
            android:id="@+id/tv_cod_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/x5"
            android:text="ddd"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/x5"
            android:drawableLeft="@drawable/money_icon_green_white"
            android:textColor="@color/light_green" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_distance_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ss"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_arrived_at_shop_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x5"
            style="@style/text_style_15sp_black"/>

        <ImageButton
            android:id="@+id/ib_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/x5"
            android:layout_alignParentRight="true"
            android:src="@drawable/edit" />

    </RelativeLayout>
</LinearLayout>