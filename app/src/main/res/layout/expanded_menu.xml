<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_item_selector"
    android:padding="@dimen/x15">

    <ImageView
        android:id="@+id/iv_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/menu_normal" />

    <TextView
        android:id="@+id/tv_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x15"
        android:layout_toRightOf="@+id/iv_menu_icon"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textColor="@color/menu_item_text_selector" />

    <TextView
        android:id="@+id/tv_menu_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x10"
        android:layout_toRightOf="@id/tv_menu_name"
        android:background="@drawable/design_red_point"
        android:gravity="center"
        android:paddingLeft="@dimen/x5"
        android:paddingRight="@dimen/x5"
        android:visibility="gone"
        android:textSize="12sp"
        android:textColor="@color/white" />

</RelativeLayout>